<div class="card gallery-card" style="width:100%; max-width:400px; margin:1rem auto;">
  <a href="{{ include.href }}" style="text-decoration: none; color: inherit;">
    <img 
      src="{{ include.img }}" 
      alt="{{ include.alt | default: 'Gallery thumbnail' }}" 
      class="card-img-top"
      style="height: 200px; object-fit: cover;"
      loading="lazy"
    >
    <div class="card-body text-center">
      <h5 class="card-title">{{ include.title }}</h5>
      <p class="card-text" style="font-size: 0.9rem;">{{ include.description }}</p>
    </div>
  </a>
</div>
