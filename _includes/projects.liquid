<div class="col mb-4">
  <a href="{% if project.redirect %}{{ project.redirect }}{% else %}{{ project.url | relative_url }}{% endif %}">
    <div class="card h-100 hoverable project-card">
      {% if project.img %}
        {% include figure.liquid
          loading="lazy"
          path=project.img
          alt=project.alt
          class="card-img-top"
        %}
      {% endif %}
      <div class="card-body">
        <h2 class="card-title">{{ project.title }}</h2>
        {% if project.description %}
          <p class="card-text">{{ project.description }}</p>
        {% endif %}
        <div class="mt-2">
          {% if project.github %}
            <a href="{{ project.github }}" target="_blank" rel="noopener noreferrer"
               class="text-dark mr-2" data-toggle="tooltip" title="GitHub Repository">
              <i class="fab fa-github fa-lg"></i>
            </a>
          {% endif %}
          {% if project.url %}
            <a href="{{ project.url | relative_url }}" target="_blank" rel="noopener noreferrer"
               class="text-primary" data-toggle="tooltip" title="Project Demo">
              <i class="fas fa-external-link-alt fa-lg"></i>
            </a>
          {% endif %}
        </div>
      </div>
    </div>
  </a>
</div>
