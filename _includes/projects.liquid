<div class="col">
  <a href="{% if project.redirect %}{{ project.redirect }}{% else %}{{ project.url | relative_url }}{% endif %}">
    <div class="card h-100 hoverable project-card mb-4">
      {% if project.img %}
        <img
          src="{{ project.img }}"
          alt="{{ project.alt | default: project.title }}"
          class="card-img-top img-fluid rounded"
          loading="lazy"
          style="width: 100%; height: auto; border-radius: 6px;"
        >
      {% endif %}
      <div class="card-body">
        <h5 class="card-title">{{ project.title }}</h5>
        {% if project.description %}
          <p class="card-text">{{ project.description }}</p>
        {% endif %}
        {% if project.url %}
          <a href="{{ project.url | relative_url }}" class="btn btn-outline-primary" target="_blank" rel="noopener noreferrer">View Project</a>
        {% endif %}
        {% if project.github %}
          <a href="{{ project.github }}" class="btn btn-outline-dark ml-2" target="_blank" rel="noopener noreferrer">
            <i class="fab fa-github"></i> GitHub
          </a>
        {% endif %}
      </div>
    </div>
  </a>
</div>
